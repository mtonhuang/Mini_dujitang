@import "/ui/weui/weui.wxss";
.shareEpisode {
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.shareEpisode textarea {
  /* border: 1px solid #ccc; */
  width: 700rpx;
  height: 360rpx;
  padding: 20rpx;
  font-size: 16px;
  box-sizing: border-box;
}

.submit {
  background: #000;
  color: white;
  width: 200rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  height: 80rpx;
  bottom: 40px;
  line-height: 80rpx;
  border-radius: 0;
}
.upLoad_close{
 position:absolute;
width:40rpx;
height:40rpx;
top: 0;
right:0;
}
.mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  top: 0;
}

.mask_content {
  width: 80%;
  background: #fff;
  height: 300rpx;
  top: 30%;
  left: 0;
  right: 0;
  bottom: 50%;
  position: absolute;
  margin: 0 auto;
  font-size: 16px;
  border-radius: 10rpx;
}
.finishPunch{
  text-align: center;
  font-weight: bold;
}
.mask_content>view{
  line-height: 2;
  margin-top: 50rpx;
}
.wait_pass{
  text-align: center;
  font-size: 14px;
  color: #999;
}


.success {
    color: #2cc92f;
    text-align: center;
    position: absolute;
    bottom: 0;
    font-weight: normal;
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    border-top: 1px solid #eee;
}
.weui-uploader__file_status{
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  width: 79px;
  height: 79px;
}